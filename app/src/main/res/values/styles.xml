<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/contextualBackgroundColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="bottomNavigationStyle">@style/CustomNavigationBottomView</item>
    </style>
    
    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        
        <item name="background">@color/actionBarBackgroundColor</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="SplashStyleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_background
        </item><!-- Showing Splash screen -->
        <item name="android:windowTranslucentStatus">true
        </item><!-- This will make status bar transparent while showing splash screen-->
        <item name="android:windowTranslucentNavigation">true
        </item> <!-- This will make Navigation bar transparent while showing splash screen-->
    </style>


    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize details activity theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorControlNormal">@color/white</item> <!-- For Text colors in tool bars -->
    </style>

    <style name="customTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="backgroundColor">@color/actionBarBackgroundColor</item>
        <item name="tabIndicator">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="customTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CustomNavigationBottomView" parent="Widget.Design.BottomNavigationView">
        
        <item name="backgroundTint">@color/bottomNavBackground</item>
        <item name="iconTint">@color/bottomNavItem</item>
        <item name="itemTextColor">@color/bottomNavItem</item>
    </style>

</resources>